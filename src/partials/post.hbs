<div class="post">
  <div class="post-wrapper">
    <div class="picture">
      <a href="#">
        <img src="{{ picture }}" alt="{{ title }}" />
      </a>
    </div>
    <span class="tag fw-600">
      <a href="#">{{ tag }}</a>,
    </span>
    <span class="date">{{ date }}</span>
    <div class="heading-1">
      {{ title }}
    </div>
  </div>
</div>
